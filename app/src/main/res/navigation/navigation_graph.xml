    android:id="@+id/navigation_graph"
    app:startDestination="@layout/fragment_main">

    <fragment
        android:id="@+id/root_fragment"
        android:name="com.websarva.wings.android.myapp.MainFragment"
        android:label="root"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_to_add_task"
            app:destination="@id/task_add_fragment"/>
